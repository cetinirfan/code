<%- include('./src/header'); %>
<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <h4 class="page-title mb-2"><i class="dripicons-store"></i>  Sunulan Tüm Teklifler</h4>  
            <div class="">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Anasayfa</a></li>
                    <li class="breadcrumb-item"><a href="javascript:void(0);">Sunulan Tüm Teklifler</a></li>
                </ol>
            </div>                                      
        </div>
    </div>
</div>
<%- include('./src/sidebar'); %>
                <div class="page-content">
                    <div class="container-fluid"> 
                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-body">
                                        <h4 class="mt-0 header-title"><%= title %></h4>
                                        <table id="datatable" class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                                            <thead>
                                            <tr>
                                                <th>Teklif Resim</th>
                                                <th>Teklif Başlık</th>
                                                <th>Teklif Açıklama</th>
                                                <th>Yorum Sayısı</th>
                                                <th>Oluşturma Tarihi</th>
                                                <th>İşlemler</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            <% find_offer.forEach(function(offer){ %>                           
                                                <tr>
                                                        <td>
                                                            <img src="<%=offer.productPhoto%>" class="rounded-circle thumb-sm mr-1" />
                                                        </td>
                                                        <td><%= offer.title %></td>
                                                        <td><%= offer.descrption %></td>
                                                        <td><%= offer.comments.length %></td>
                                                        <td><%= moment(offer.offerCreated).format("DD MM YYYY"); %></td>
                                                        <td>
                                                            <a href="../deleteOffer/<%= offer._id %>" class="btn btn-sm btn-warning"><i class="fas fa-trash"></i></a>
                                                        </td>
                                                    </tr> 
                                              <% }); %> 
                                            </tbody>
                                        </table>
            
                                    </div>
                                </div> 
                            </div> <!-- end col -->
                        </div>
                    </div><!-- container -->
                </div>
<%- include('./src/footer'); %>